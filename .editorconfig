# EditorConfig lets you maintain a consistent coding style
# See http://EditorConfig.org for more info

# Set to true for the editorconfig file in the root of your project
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# JS files use size 2 tabs
[*.js]
indent_style = tab
indent_size = 2

# HTML files get full size 4 tab indents
[*.html]
indent_style = tab
indent_size = 4

# Matches the exact files package.json and .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2